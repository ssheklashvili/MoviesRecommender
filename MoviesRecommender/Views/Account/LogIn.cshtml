@model MoviesRecommender.WEB.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "ავტორიზაცია";
}

<div class="account-background">
    <div class="account-background-mirror">
        <div class="container">
            <div class="account-card card mt-5">
                <h5 class="card-header info-color white-text text-center py-4">
                    <strong class="font-upper">ავტორიზაცია</strong>
                </h5>
                <div class="card-body px-lg-5 pt-0">
                    <form class="text-center" style="color: #757575;" asp-action="LogIn" method="post">
                        <div asp-validation-summary="All" class="text-danger">@ViewBag.LoginError</div>
                        <div class="md-form">
                            <input asp-for="Email" id="Email" name="Email" class="form-control" required>
                            <label class="font-upper" for="materialLoginFormEmail">ელ.ფოსტა</label>
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="md-form">
                            <input asp-for="Password" type="password" id="Password" name="Password" class="form-control" required>
                            <label class="font-upper" for="materialLoginFormPassword">პაროლი</label>
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="d-flex justify-content-around">
                            <div>
                                <div class="form-check">
                                    <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="RememberMe">
                                    <label class="form-check-label font-upper" for="materialLoginFormRemember">დაიმახსოვრე</label>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0 font-upper" type="submit">ავტორიზაცია</button>
                        <p class="font-lower">
                           არ ხართ მონაწილე? გაიარე 
                            <a asp-controller="Account" asp-action="Register"> რეგისტრაცია</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

