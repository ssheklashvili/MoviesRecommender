@model MovieRecommender.Core.Models.AppModels.ProfileViewModel


<!-- Material form register -->
<div class="card mt-3" style="width: 1500px;">

    <h5 class="card-header info-color white-text text-center py-4">
        <strong>Profile</strong>
    </h5>

    <!--Card content-->
    <div class="card-body px-lg-5 pt-0">

        <!-- Form -->
        <div class="text-center" style="color: #757575;">
            <div class="form-row">
                <div class="col">
                    <!-- First name -->
                    <div class="md-form">
                        <input asp-for="FirstName" type="text" id="materialRegisterFormFirstName"
                               class="form-control" disabled value="@Model.FirstName">
                        <label for="materialRegisterFormFirstName">First name</label>
                    </div>
                </div>
                <div class="col">
                    <!-- Last name -->
                    <div class="md-form">
                        <input asp-for="LastName" type="text" id="materialRegisterFormLastName"
                               class="form-control" disabled value="@Model.LastName" />
                        <label for="materialRegisterFormLastName">Last name</label>
                    </div>
                </div>
            </div>

            <!-- E-mail -->
            <div class="md-form mt-0">
                <input asp-for="Email" type="email" id="materialRegisterFormEmail"
                       class="form-control" disabled value="@Model.Email">
                <label for="materialRegisterFormEmail">E-mail</label>
            </div>

            <div class="md-form mt-0">
                <input asp-for="Artists" type="text" id="Artists"
                       class="form-control" disabled value="@Model.Artists">
                <label for="Artists">Favourite Artists</label>

            </div>

            <div class="md-form mt-0">
                <input asp-for="Genres" type="text" id="Genres"
                       class="form-control" disabled value="@Model.Genres">
                <label for="Genres">Favourite Genres</label>

            </div>

            <div class="md-form mt-0">
                <input asp-for="Directors" type="text" id="Directors"
                       class="form-control" disabled value="@Model.Directors">
                <label for="Directors">Favourite Directors</label>

            </div>
        </div>
        <!-- Form -->

    </div>

</div>
